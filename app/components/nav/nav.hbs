<div class="nav app-block" id="{{id}}">
{{#if communitySwitch}}
	{{#each navCommunities}}
		{{>PartialCommunitySwitch}}
	{{/each}}
	{{!-- {{>PartialIcon}} --}}
{{/if}}
{{#if title}}
<div class="nav-title">

	{{#if navTitleIcon}}<i class="nav-title__icon {{navTitleIcon}}"></i>{{/if}}

	{{navTitle}}
{{#if button}}
	<div class="nav-title__button pull-right">{{>PartialButton}}</div>
{{/if}}
</div>
{{/if}}
{{#if subTitle}}
<div class="sub-title">
	<span class="category">{{category}}</span>
	<span class="name">{{name}}</span>
</div>
{{/if}}
	<li class="first"></li>
	{{#each navItems}}
		{{>PartialNavItem}}
	{{/each}}
{{#if navActionBar}}
	{{#navActionBarButtons}}
		<li class="nav__action-bar__button">{{>PartialButton}}</li>
	{{/navActionBarButtons}}
{{/if}}
	<li class="last"></li>
</div>