
<div class="row header">
    <div class="header-container">
        <div class="col-md-3">
        {{#if logo}}
            {{#logo}}<a href="/"><img src="{{src}}" class="header-logo pull-left"></a>{{/logo}}
        {{/if}} 
        </div>
        <div class="col-md-6"> 
            {{#if input}} {{#input}} {{> PartialTextInput class="text-input__grey"}} {{/input}} {{/if}} 
        </div> 
        {{#if navItems}}
        <div class="col-md-3">
            <div class="nav nav--horizontal pull-right">
                {{#each navItems}}
                    <li>{{> PartialNavItem}}</li>
                {{/each}}
                {{#each navIcons}}
                    {{> PartialIcon}}
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>
</div> 

